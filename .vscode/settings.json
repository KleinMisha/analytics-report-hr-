{
    // Color of title bar: 
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#58508d"
    },
    // Type Checking settings: Pandas & Matplotlib tend to confuse PyLance too much. 
    // Tell it to ignore some of these "return type of function X is partially unknown, I have one of many Overwrites ..." 
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnknownMemberType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownArgumentType": "none"
    }
}